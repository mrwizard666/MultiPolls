<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MultiPolls - @ViewBag.Title</title>

    <script src="@Url.Content("/Scripts/jquery-1.10.2.min.js")"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="@Url.Content("/Scripts/jquery.create.poll.js")"></script>
    <script src="@Url.Content("/Scripts/jquery.login.form.js")"></script>
    <script src="@Url.Content("/Scripts/Highcharts-4.0.1/js/highcharts.js")"></script>

    @*<script src="@Url.Content("/Scripts/jquery.results.plot.js")"></script>*@
</head>

<body>
    <header id="header">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <img class="navbar-brand img-max-size img-responsive" 
                         src="~/Resources/LogoHeader.png" />
                </div>
                <div class="navbar-mid navbar-collapse collapse">
                    <div class="btn-group">
                        <ul class="nav-display-inline">
                            <li class="nav-display-inline ">
                                @*<a href="/Polls/Create" class="">*@
                                @*@Html.ActionLink("Create Poll", "Create", "Polls", null, new*@
                           @*{ @*email = "test", @class = "btn btn-danger navbar-btn"*@
                           })
                                @*@Html.DisplayNameFor(id => Model.Id)*@
                            <li class="nav-display-inline">
                                <a href="/Polls/Create" class="btn btn-danger navbar-btn">
                                    Create Poll
                                </a>
                            </li>
                            <li class="nav-display-inline">
                                <a href="/Polls/Index" class="btn btn-danger navbar-btn">
                                    View My Polls
                                </a>
                            </li>
                            <li class="nav-display-inline">
                                <a href="/Polls/PublishedPolls" class="btn btn-danger navbar-btn">
                                    View Public Polls
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="navbar-right navbar-collapse collapse">
                    @Html.Partial("_LoginBarPartial")
                </div>
            </div>
        </div>
    </header>
    <div id="body" class="index-background">
        <div class="container body-content">
            @RenderBody()
        </div>
       
  
            @*<footer id="footer" class="navbar-default">
            <div class="container">
                <p>&copy; @DateTime.Now.Year - MrWizardApps</p>
            </footer>*@
    </div>

  
</body>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)

</html>
