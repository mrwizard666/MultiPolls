<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MultiPolls - @ViewBag.Title</title>

    <script src="@Url.Content("/Scripts/jquery-2.1.1.min.js")"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="@Url.Content("/Scripts/jquery.create.poll.js")"></script>
    <script src="@Url.Content("/Scripts/jquery.login.form.js")"></script>
    <script src="@Url.Content("/Scripts/Highcharts-4.0.1/js/highcharts.js")"></script>

    @*<script src="@Url.Content("/Scripts/jquery.results.plot.js")"></script>*@
</head>

<body>
    <header id="header">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div id="logo">
                        <a href="/Index">
                            <img class="navbar-brand img-max-size img-responsive"
                                 src="~/Resources/LogoHeader.png" />
                        </a>
                    </div>
                </div>
                <div>
                    @Html.Partial("_LoginBarPartial")
            </div>
        </div>
            </div>
    </header>

    <div id="body" class="index-background">
        <div class="container body-content">
            @RenderBody()
        </div>


        @*<footer id="footer" class="navbar-default">
            <div class="container">
                <p>&copy; @DateTime.Now.Year - MrWizardApps</p>
            </footer>*@
    </div>


</body>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)

</html>
