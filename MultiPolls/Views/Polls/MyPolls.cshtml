﻿@model IEnumerable<MultiPolls.Models.Poll>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("My Polls in Progress", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PollQuestion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatorID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EditDate)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.CreatorID == User.Identity.Name && item.IsPublished == false)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PollQuestion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatorID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EditDate)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }) |
                    @Html.ActionLink("Publish", "Publish", new { id = item.ID })
                </td>
            </tr>
        }
    }

</table>